<div class="padding-global padding-section-medium"><div class="container-large"><div class="product_component"><div class="product_heading-wrapper"><div class="product_heading"><div class="max-width-large"><h2 class="heading-style-h2">
{{ section.settings.text_headline }}
</h2>
</div></div><div class="product_button-row hide-mobile-landscape"></div></div>{% assign collection = collections['bieren-1'] %}
{% assign bierstijl = product.metafields.custom.bierstijl %}
{% assign productcount = 0 %}
{% paginate collection.products by 3000 %}
    <div li-paginate:by="3000" li-paginate="collection.products" class="product_list-wrapper w-dyn-list" by="3000"><div li-for:inside="product in collection.products" role="list" class="product_list w-dyn-items">
        {% for product in collection.products %}                            
                            {% if product.metafields.custom.bierstijl == bierstijl and productcount < 4 %}    <div li-if="product.metafields.custom.bierstijl == bierstijl and productcount < 4" role="listitem" class="product_list-item w-dyn-item">
    {% render 'product_item', product: product %}
{% assign productcount = productcount | plus: 1 %}
    </div>
{% endif %}
                            
                    {% endfor %}    </div>
<div class="hide w-dyn-empty"><div>No items found.</div></div></div>{% endpaginate %}
</div></div></div> {% schema %} {"tag":"section","name":"ProductenBierstijl","class":"section_product","settings":[{"id":"text_headline","type":"text","label":"Headline","default":"Short heading here"}],"presets":[{"name":"ProductenBierstijl","category":"Liquify","blocks":[]}]} {% endschema %}